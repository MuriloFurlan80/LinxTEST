@model SO.ViewModel.StoreViewModel
@{
    ViewData["Title"] = "Produtos";
}

<h1>Produtos</h1>

<div class="d-flex w-100 justify-content-between align-items-center">
    <h4>Produtos - @Model.User.Name</h4>
    <a href="@Url.Action("Index","ExpenseTotal")?storeId=@Model.Id" class="btn btn-primary">Expense Total</a>
</div>

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Foto</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
                <th scope="col">Estoque</th>
                <th scope="col">Preço</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Products.Count != default)
            {
                foreach (var item in Model.Products)
                {
                    <text>
                        <tr style="vertical-align: middle">
                            <th><img style="width: 50px; height:50px;" src="@item.Photo" alt="Image" /></th>
                            <th scope="row">@item.Name</th>
                            <td>@item.Description</td>
                            <td>@item.Quantity</td>
                            <td><strong class="text-success">R$: @item.Price.ToString("n2")</strong></td>
                            <td><button class="btn btn-outline-info d-flex justify-content-center align-items-center" style="font-weight:bold; font-size:20px; border-radius:50%; width:40px; height:40px;">+</button></td>
                        </tr>
                    </text>
                }
            }
        </tbody>
    </table>
</div>